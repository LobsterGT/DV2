{
  "$schema": "https://vega.github.io/schema/vega-lite/v6.json",
  "title": "Male & Female Graduates Of Each Age Group",
  "width": "container",
  "height": 350,
  "config": {
    "title": {
      "fontSize": 20,
      "font": "Serif"
    },
    "axis": {
      "labelFontSize": 12,
      "titleFontSize": 13
    }
  },
  "data": {
    "url": "https://raw.githubusercontent.com/LobsterGT/DV2/refs/heads/main/data/graduate_number.csv"
  },
  "params": [
    {
      "name": "Select_Year",
      "value": 2016,
      "bind": {
        "input": "select",
        "options": [2016, 2017, 2018, 2019, 2020],
        "labels": ["2016", "2017", "2018", "2019", "2020"],
        "name": "Select Year: "
      }
    },
    {
      "name": "Education_level",
      "value": "Diploma",
      "bind": {
        "input": "select",
        "options": ["Degree", "Diploma"],
        "labels": ["Degree", "Diploma"],
        "name": "Education Level: "
      }
    }
  ],
  "transform": [
    {
      "filter": "toNumber(datum.Year) == toNumber(Select_Year)"
    },
    {
      "filter": "datum['Education level'] == Education_level"
    },
    {
      "calculate": "datum['Age Group'] == 'less than or equal 24' ? '0 - 24' : datum['Age Group'] == 'greater than or equal 45' ? '45 - 100' : datum['Age Group']",
      "as": "AgeGroupLabel"
    }
  ],
  "mark": {
    "type": "bar"
  },
  "encoding": {
    "x": {
      "field": "AgeGroupLabel",
      "type": "ordinal",
      "title": "Age Group",
      "axis": {
        "labelAngle": 0
      }
    },
    "y": {
      "field": "Graduate Number",
      "type": "quantitative",
      "title": "Number of Graduates"
    },
    "color": {
      "field": "Sex",
      "type": "nominal"
    },
    "opacity": {
    "condition": {
      "test": "datum.AgeGroupLabel == '25 - 34'",
      "value": 1
    },
    "value": 0.7
  },
    "stroke": {
    "condition": {
      "test": "datum.AgeGroupLabel == '25 - 34'",
      "value": "red"
    },
    "value": null
  },
    "strokeWidth": {
      "condition": {
        "test": "datum.AgeGroupLabel == '25 - 34'",
        "value": 2
      },
      "value": 0
    },
    "xOffset": {
      "field": "Sex"
    },
    "tooltip": [
      {
        "field": "Sex",
        "title": "Gender"
      },
      {
        "field": "AgeGroupLabel",
        "title": "Age Group"
      },
      {
        "field": "Graduate Number",
        "title": "Number of Graduates"
      }
    ]
  }
}